<Window x:Class="WpfApp1.MotorControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="电机控制台" Height="280" Width="200">
    <Grid>
        <TextBlock x:Name="MotorText" FontSize="30" Height="40" Width="90" Margin="0,18,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="Run" Content="启" Click="Run_Click" Width="50" Height="50" Margin="21,113,109,22" VerticalAlignment="Center" />
        <Button x:Name="Stop" Content="停" Click="Stop_Click" Width="50" Height="50" Margin="109,113,21,22" VerticalAlignment="Center" />
    </Grid>
</Window>   
